<!DOCTYPE html>
<html>
<head>

    <%- include ./partials/head.ejs %>

</head>

<body>
<%- include ./partials/header-nav.ejs %>
  <!--Main layout-->
  <main class="mt-5">
    <!--Main container-->
    <div class="container">
        <!--Grid row-->
        <div class="row">
          <div class="col-md-3"></div>
          <div class="col-lg-6">
            <div class="card border border-primary">
              <div class="card-header text-center font-weight-bold h5">
                회원가입
              </div>
              <div class="card-body">
            <% if(message.length > 0){%>
              <div class="alert alert-danger"><%=message%></div>
              <%}%>
            <form action='/auth/signup' method="post">
              <div class="form-group row">
                <label for="Reg_userID" class="col-lg-3 col-form-label ">학번</label>
                <div class="col">
                  <input type="text" class="form-control" id="Reg_UserID" name="Reg_UserID" placeholder="학번" required>
                </div>
              </div>
              <div class="form-group row">
                <label for="Reg_Password" class="col-lg-3 col-form-label">비밀번호</label>
                <div class="col">
                  <input type="password" class="form-control" id="Reg_Password" name="Reg_Password" placeholder="비밀번호" required>
                </div>
              </div>
              <div class="form-group row">
                <label for="Reg_userID" class="col-lg-3 col-form-label">닉네임</label>
                <div class="col">
                  <input type="text" class="form-control" id="Reg_UserID" name="Reg_Nickname" placeholder="닉네임" required>
                </div>
              </div>
              <div class="form-group row">
                <label for="Reg_userID" class="col-lg-3 col-form-label">전화번호</label>
                <div class="col">
                  <input type="text" class="form-control" id="Reg_UserID" name="Reg_UserPhone" placeholder="전화번호">
                </div>
              </div>
              <div class="form-group row">
                <label for="inputEmail3" class="col-lg-3 col-form-label">이메일</label>
                <div class="col">
                  <input type="email" class="form-control" id="inputEmail3" name="Reg_UserEmail" placeholder="이메일">
                </div>
              </div>
              <div class="form-group row">
                <label for="Reg_userID" class="col-lg-3 col-form-label">기타 연락수단</label>
                <div class="col">
                  <input type="text" class="form-control" id="Reg_UserID" name="Reg_OtherContact" placeholder="다른 연락수단이 있으면 입력해주세요">
                </div>
              </div>
              <div class="form-group row">
                <label for="Reg_userID" class="col-lg-3 col-form-label">자기소개</label>
                <div class="col">
                  <textarea type="text" class="form-control" id="Reg_Introduce" name="Reg_Introduce" placeholder="간단한 소개"></textarea>
                </div>
              </div>
              <br>
              <div class="form-group row mt-1">
                <div class="col-lg-4"></div>
                <div class="col-auto">
                  <button type="submit" class="btn btn-primary btn-outline-primary">회원가입 <i class="fa fa-sign-in ml-1"></i></button>
                </div>
              </div>

              </form>
          </div>
        </div>
      </div>
          <div class="col-md-3"></div>
        </div>
      </div>
<!--Main container-->
  </main>
<!--Main layout-->

<%- include ./partials/footer.ejs %>


</body>
</html>
