<!DOCTYPE html>
<html>
<head>
    <%- include ./partials/head.ejs %>
</head>

<body>
<%- include ./partials/header-nav.ejs %>
<!--Main layout-->
<main class="mt-5">
  <!--Main container-->
  <div class="container">
      <!--Grid row-->
      <div class="row">
        <div class="col-lg-4"></div>
        <div class="col-lg-4">
          <div class="card border border-primary">
            <div class="card-header text-center font-weight-bold h5">
              로그인
            </div>
            <div class="card-body">
              <% if(message.length > 0){%>
                <div class="alert alert-danger"><%=message%></div>
                <%}%>
                <form action='/auth/login' method="post">
                  <div class="form-group row">
                    <label for="Reg_userID" class="col-lg-4 col-form-label">학번</label>
                    <div class="col-lg-12">
                      <input type="text" class="form-control" id="Reg_UserID" name="Log_UserID" placeholder="학번" required>
                    </div>
                  </div>
                  <div class="form-group row">
                    <label for="inputEmail3" class="col-lg-4 col-form-label">비밀번호</label>
                    <div class="col-lg-12">
                      <input type="password" class="form-control" id="inputEmail3" name="Log_Password" placeholder="비밀번호" required>
                    </div>
                  </div>
                  <br>
                  <div class="form-group row mt-1">
                    <div class="col-lg-4"></div>
                    <div class="col-auto">
                      <button type="submit" class="btn btn-primary btn-outline-primary">로그인 <i class="fa fa-sign-in ml-1"></i></button>
                    </div>
                  </div>
                  </form>
            </div>
          </div>
        </div>

        <div class="col-md-4"></div>
      </div>
    </div>
<!--Main container-->
</main>
<!--Main layout-->
<%- include ./partials/footer.ejs %>
</body>
</html>
